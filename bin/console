#!/usr/bin/env php
<?php

require_once __DIR__.'/../vendor/autoload.php';

set_time_limit(0);

use Symfony\Component\Console\Input\ArgvInput;

	$input = new ArgvInput();
	$env = $input->getParameterOption(array('--env', '-e'), getenv('SYMFONY_ENV') ?: 'dev');

	$app = new \Antomarsi\Core\Application($env == 'dev');
    $console = new \Antomarsi\Core\Console($app, 'A Simple API Application', 'n/a');
    $console->run();
